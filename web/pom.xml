        </dependency>
        <!--<dependency> <groupId>no.nav.foreldrepenger.felles.integrasjon</groupId> 
            <artifactId>felles-integrasjon-jms</artifactId> <type>test-jar</type> <scope>test</scope> 
            </dependency> -->
